<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.imhk.impossible.MainActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Robot: 0"
        android:textSize="30dp"
        android:id="@+id/rScore"
        android:textAlignment="center"
        />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/six"
        android:id="@+id/humanTurn"
        android:layout_below="@+id/hScore"
        android:layout_alignLeft="@+id/robotTurn"
        android:layout_alignStart="@+id/robotTurn" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/six"
        android:id="@+id/robotTurn"
        android:layout_below="@+id/rScore"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="You: 0"
        android:textSize="30dp"
        android:id="@+id/hScore"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Finish"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/finish"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Help!"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/help"
        android:onClick="onHelp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/finish"
        android:layout_toStartOf="@+id/finish"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp" />


</RelativeLayout>
